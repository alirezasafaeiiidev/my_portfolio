# Runtime
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://alirezasafaeidev.ir
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_WEB_VITALS=false

# Engineering request email delivery
EMAIL_PROVIDER=disabled
ENGINEERING_FROM=noreply@alirezasafaeidev.ir
ENGINEERING_NOTIFY_TO=contact@alirezasafaeidev.ir
RESEND_API_KEY=
RESEND_API_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# Database (Prisma + SQLite by default)
# Use an absolute path on server storage, e.g. /var/lib/my_portfolio/custom.db
DATABASE_URL=file:./db/custom.db

# Admin auth
ADMIN_API_TOKEN=replace-with-strong-token-min-16
ADMIN_USERNAME=admin
ADMIN_PASSWORD=replace-with-strong-password-min-8
ADMIN_SESSION_SECRET=replace-with-strong-secret-min-32
ADMIN_SESSION_MAX_AGE_SECONDS=28800

# Optional: distributed rate limit
# REDIS_REST_URL=https://<redis-host>
# REDIS_REST_TOKEN=<redis-token>

# Optional: API rate limits
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=5
