{
  "ci": {
    "collect": {
      "url": [
        "http://127.0.0.1:3000/",
        "http://127.0.0.1:3000/services",
        "http://127.0.0.1:3000/case-studies"
      ],
      "startServerCommand": "pnpm run build && pnpm run start",
      "startServerReadyTimeout": 240000,
      "numberOfRuns": 3
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.85 }],
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["error", { "minScore": 0.92 }],
        "categories:seo": ["error", { "minScore": 0.95 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 2500 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 4000 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.2 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
